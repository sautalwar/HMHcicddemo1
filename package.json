{
  "name": "github-cicd-demo",
  "version": "1.0.0",
  "description": "GitHub CI/CD Demo with Node.js, SQL Server, Redis, and Playwright",
  "main": "src/backend/server.js",
  "scripts": {
    "start": "node src/backend/server.js",
    "start:local": "node -r dotenv/config src/backend/server.js dotenv_config_path=.env.development",
    "start:prod": "node -r dotenv/config src/backend/server.js dotenv_config_path=.env.production",
    "dev": "nodemon -r dotenv/config src/backend/server.js dotenv_config_path=.env.development",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jest --testMatch='**/tests/unit/**/*.spec.js'",
    "test:integration": "jest --testMatch='**/tests/integration/**/*.spec.js'",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:workflows": "playwright test --grep @workflow",
    "db:migrate": "node -r dotenv/config src/database/migrate.js dotenv_config_path=.env.development",
    "db:seed": "node -r dotenv/config src/database/seed.js dotenv_config_path=.env.development",
    "lint": "eslint src/",
    "format": "prettier --write 'src/**/*.js'"
  },
  "keywords": [
    "github-actions",
    "cicd",
    "azure",
    "playwright",
    "nodejs"
  ],
  "author": "Microsoft",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mssql": "^10.0.1",
    "redis": "^4.6.10",
    "dotenv": "^16.3.1",
    "express-session": "^1.17.3",
    "connect-redis": "^7.1.0",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "express-rate-limit": "^8.2.1",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "joi": "^17.11.0",
    "winston": "^3.11.0",
    "ejs": "^3.1.9",
    "@azure/identity": "^4.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "nodemon": "^3.0.2",
    "eslint": "^8.55.0",
    "prettier": "^3.1.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
